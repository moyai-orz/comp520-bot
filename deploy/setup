#!/usr/bin/env bash

set -euxo pipefail

touch ~/.hushlogin

DOMAIN=$1

hostnamectl set-hostname "$DOMAIN"

apt-get install --yes \
  acl \
  clang \
  libsqlite3-dev\
  libssl-dev \
  pkg-config \
  vim

if [[ ! -e ~/.cargo/env ]]; then
  curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y
fi

source ~/.cargo/env

cargo build --release

if [[ -f /usr/local/bin/bot ]]; then
  mv /usr/local/bin/bot /usr/local/bin/bot.bak
fi

cp target/release/bot /usr/local/bin/bot

id --user bot || useradd --system bot

cp deploy/bot.service /etc/systemd/system/

systemctl daemon-reload
systemctl enable bot
systemctl restart bot

echo 'Deployed ðŸŽ‰'
